generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum LINUPTYPE {
  PRELUDE
  RESPONSE
  ADULT
  YOUTH
  SPECIAL
}

model Song {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  artist     String
  category   String
  type       String
  lineupDate DateTime
  linupType  LINUPTYPE
  votes      Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
